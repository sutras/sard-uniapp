{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["@dcloudio/types", "node", "vitest", "vitest/globals"]
  },
  "exclude": [
    "**/dist/**",
    "**/docs/**",
    "**/node_modules/**",
    "**/uni_modules/**"
  ]
}
