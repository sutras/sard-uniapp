{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": [
      "@dcloudio/types",
      "./src/lib/global.d.ts",
      "./pages.d.ts",
      "./env.d.ts"
    ],
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./src/{components,pages,utils,style}/*",
        "./src/{App.vue,main.ts}"
      ],
      "sard-uniapp": ["./src/lib"],
      "sard-uniapp/*": ["./src/lib/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "**/dist/**",
    "**/docs/**",
    "**/node_modules/**",
    "**/uni_modules/**"
  ]
}
